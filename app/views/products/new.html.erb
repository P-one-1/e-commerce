<h1>New Product</h1>

<%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :sku_id %>
    <%= f.text_field :sku_id %>

    <%= f.submit %>
<% end %>

<h1>Upload File for Bulk Product Create</h1>
<%= form_with url: '/products/bulk_create', method: :post, local: true, multipart: true do %>
    <div>
      <%= label_tag :file, 'Upload File' %>
      <%= file_field_tag :file %>
    </div>
    <div>
      <%= submit_tag 'Save' %>
    </div>
<% end %>

<%= button_to 'Product List', products_path, method: :get, class: 'btn btn-primary' %>
